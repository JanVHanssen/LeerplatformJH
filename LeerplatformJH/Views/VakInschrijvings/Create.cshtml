@model LeerplatformJH.Models.VakInschrijving

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>VakInschrijving</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VakInschrijvingId" class="control-label"></label>
                <input asp-for="VakInschrijvingId" class="form-control" />
                <span asp-validation-for="VakInschrijvingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VakId" class="control-label"></label>
                <select asp-for="VakId" class ="form-control" asp-items="ViewBag.VakId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Goedkeuring" class="control-label"></label>
                <select asp-for="Goedkeuring" class="form-control">
                    <option value="@Goedkeuring.Toegelaten">Toegelaten</option>
                    <option value="@Goedkeuring.In_beraad">In beraad</option>
                    <option value="@Goedkeuring.Afgewezen">Afgewezen</option>
                </select>
                <span asp-validation-for="Goedkeuring" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
