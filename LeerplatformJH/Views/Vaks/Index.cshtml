@model IEnumerable<LeerplatformJH.Models.Vak>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="custtable" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studiepunten)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studiepunten)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.VakId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VakId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VakId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<link rel="stylesheet" type="text/css"
      href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
@section Scripts
    {
    <script type="text/javascript"
            src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script>
        $(function () {
            $('#custtable').DataTable({
                "ajax": {
                    "url": "/Vaks/LoadAllVakken",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "vakId" },
                    { "data": "titel" },
                    { "data": "studiepunten" },
                    { "data": "docentId" },
                    { "data": "docent" },
                    { "data": "vakInschrijvingen" },
                    { "data": "lessen" }
                ]

            });
        });
    </script>
}